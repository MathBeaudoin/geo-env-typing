{
    "name": "geo-env-typing",
    "version": "1.0.0",
    "description": "A package aimed to provide types, classes and data-validators for geographic, solar, and air-quality-data. Currently supporting TypeScript ",
    "type": "module",
    "author": "MathBeaudoin",
    "scripts": {
        "build": "npm run prettier; npm run clean; npm run build:esm; npm run build:cjs",
        "prettier": "npx prettier --trailing-comma none --tab-width 4 --print-width 120 -uw --cache --ignore-path .gitignore .",
        "clean": "Remove-Item ./dist -Recurse -Force -ErrorAction SilentlyContinue",
        "build:esm": "tsc -p ./tsconfig.esm.json; Dir ./dist/esm/*.js | rename-item -newname { [io.path]::ChangeExtension($_.name, 'mjs') }",
        "build:cjs": "tsc -p ./tsconfig.cjs.json",
        "prepack": "npm run build"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/types/index.d.ts",
                "default": "./dist/esm/index.mjs"
            },
            "require": {
                "types": "./dist/cjs/types/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}
